<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/nav') %>

    <main class="container mx-auto mt-20 px-4">
        <h1 class="text-4xl font-bold text-center text-pink-600 mb-8">
            üè° <%= editing ? "Edit" :"List" %> Your Home on Airbnb
        </h1>
        <p class="text-center text-gray-600 max-w-2xl mx-auto mb-10">
            <%= editing ? "Edit" :"Fill" %> in the details below to list your property. Make sure to provide accurate information so guests can find your home easily.
        </p>

        <form action="/host/<%= editing ? "edit-home" :"add-home" %>" method="POST" class="max-w-2xl mx-auto bg-white p-8 rounded-2xl shadow-lg space-y-5">

            <!-- House Name --> 
            <div>
                <label for="houseName" class="block text-sm font-semibold text-gray-700 mb-1">House Name</label>
                <input type="text" name="houseName" id="houseName" value="<%= editing ? home.houseName : ''%>" placeholder="Eg: Cozy Beachfront Villa"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
                <input type="hidden" name="id" id="id" value="<%= editing ? home._id : '' %>">
            </div>

            <!-- Owner Name -->
            <div>
                <label for="ownerName" class="block text-sm font-semibold text-gray-700 mb-1">Owner's Name</label>
                <input type="text" name="ownerName" id="ownerName" value="<%= editing ? home.ownerName : ''%>" placeholder="Eg: Nivash singh"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>

            <!-- City -->
            <div>
                <label for="city" class="block text-sm font-semibold text-gray-700 mb-1">City</label>
                <input type="text" name="city" id="city" value="<%= editing ? home.city : ''%>" placeholder="Eg: Nawada"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>

            <!-- Address -->
            <div>
                <label for="address" class="block text-sm font-semibold text-gray-700 mb-1">Full Address</label>
                <textarea name="address" id="address" rows="2" placeholder="Complete address"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition"><%= editing ? home.address : '' %></textarea>
            </div>

            <!-- Price -->
            <div>
                <label for="price" class="block text-sm font-semibold text-gray-700 mb-1">Price/Night</label>
                <input type="number" name="price" id="price" value="<%= editing ? home.price : ''%>" placeholder="Eg: 2500"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>

            <!-- Rating -->
            <div>
                <label for="rating" class="block text-sm font-semibold text-gray-700 mb-1">Rating</label>
                <input type="text" name="rating" id="rating" value="<%= editing ? home.rating : ''%>" placeholder="Eg: 4.5"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>

            <!-- Contact -->
            <div>
                <label for="contactNumber" class="block text-sm font-semibold text-gray-700 mb-1">Contact Number</label>
                <input type="text" name="contactNumber" id="contactNumber" value="<%= editing ? home.contactNumber : ''%>" placeholder="+91 **********"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>

            <!-- Photo URL -->
            <div>
                <label for="photoUrl" class="block text-sm font-semibold text-gray-700 mb-1">Photo URL</label>
                <input type="text" name="photoUrl" id="photoUrl" value="<%= editing ? home.photoUrl : ''%>" placeholder="Eg: https://image-link.jpg"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition">
            </div>
            <div>
                <label for="description" class="block text-sm font-semibold text-gray-700 mb-1">description</label>
                <textarea name="description" id="description" rows="2" placeholder="write something about your home...."
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition"><%= editing ? home.description : '' %></textarea>
            </div>

            <!-- Buttons -->
            <div class="flex gap-4">
                <input type="submit" value="<%= editing ? "Update" :"Submit" %>"
                    class="w-full bg-pink-600 hover:bg-pink-700 text-white py-3 px-4 rounded-lg font-semibold transition shadow">
                <input type="reset" value="Reset"
                    class="w-full bg-gray-300 hover:bg-gray-400 text-gray-800 py-3 px-4 rounded-lg font-semibold transition shadow">
            </div>
        </form>
    </main>
</body>

<%- include('../partials/footer') %>
</html>
