<header class="bg-white border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
  <nav class="container mx-auto flex justify-between items-center px-4 py-3">

    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-pink-600 tracking-tight">
      airbnb
    </a>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex space-x-1 items-center align-middle">
      <% if(isLoggedIn) { %>
        <li>
          <a href="/homes"
            class="py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'homes' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
            Homes
          </a>
        </li>
        <li>
          <a href="/bookings" type="disabled" id="bookings"
            class="disabled py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'bookings' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
            Bookings
          </a>
        </li>
        <li>
          <a href="/favourites"
            class="py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'favourites' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
            Favourites
          </a>
        </li>
        <li>
          <a href="/host/add-home"
            class="py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'addHome' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
            Add Home
          </a>
        </li>
        <li>
          <a href="/host/home-list"
            class="py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'host-homes' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
            Host Home
          </a>
        </li>
        <li>
          <form action="/logout" method="post" class="w-full flex justify-center">
            <button type="submit"
              class="py-2 px-4 rounded-md transition duration-200 text-gray-700 hover:bg-gray-100">Log Out</button>
          </form>
        </li>
        <% }else{ %>
          <li>
            <a href="/login"
              class="py-2 px-4 rounded-md transition duration-200 
           <%= currentPage === 'login' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">
              LogIn
            </a>
          </li>
          <% } %>
    </ul>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-gray-700 focus:outline-none" id="menu-toggle">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden flex-col space-y-1 bg-white border-t border-gray-200 px-4 pb-4" id="mobile-menu">
    <% if(isLoggedIn) { %>
      <a href="/homes"
        class="block p-2 rounded-md <%= currentPage === 'homes' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">Homes</a>
      <a href="/bookings"
        class="block p-2 rounded-md <%= currentPage === 'bookings' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">Bookings</a>
      <a href="/favourites"
        class="block p-2 rounded-md <%= currentPage === 'favourites' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">Favourites</a>
      <a href="/host/add-home"
        class="block p-2 rounded-md <%= currentPage === 'addHome' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">Add
        Home</a>
      <a href="/host/home-list"
        class="block p-2 rounded-md <%= currentPage === 'host-homes' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">Host
        Home</a>
      <form action="/logout" class="block p-2 rounded-md text-gray-700 hover:bg-gray-100 %>" method="post">
        <button type="submit">Log Out</button>
      </form>
      <% }else{ %>
        <a href="/login"
          class="block p-2 rounded-md <%= currentPage === 'login' ? 'bg-pink-100 text-pink-600 font-semibold' : 'text-gray-700 hover:bg-gray-100' %>">LogIn</a>
        <% } %>
  </div>


  <!-- //some script for this nav bar  -->
  <script>
    document.getElementById('menu-toggle').addEventListener('click', function () {
      document.getElementById('mobile-menu').classList.toggle('hidden');
    });


    const link = document.getElementById('bookings');
    link.addEventListener('click', function (event) {
      event.preventDefault(); // Prevents navigation
      alert('This link is disabled on this time.');
    });
  </script>
</header>