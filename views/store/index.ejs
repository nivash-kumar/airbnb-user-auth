<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-50 min-h-screen">
        <%- include('../partials/nav') %>
    
        <main class="container mx-auto px-4 py-10 mt-10">
            <h2 class="text-3xl font-bold  text-pink-600 text-center mb-10">
                Welcome to Airbnb – Explore Our Homes
            </h2>
    
            <!-- Grid Container -->
            <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 ">
                <% registeredHomes.forEach(home => { %>
                    <li class="relative group">
                        <!-- Clickable Card -->
                        <a href="/homes/<%= home._id %>" class="block bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-all duration-300">
    
                            <!-- Image Section -->
                            <div class="relative w-full h-60 overflow-hidden">
                                <img src="<%= home.photoUrl %>"
                                     alt="<%= home.houseName %>"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
    
                                <!-- Floating Rating -->
                                <div class="absolute top-3 left-3 bg-white px-3 py-1 rounded-full text-gray-900 font-semibold shadow">
                                    ⭐ <%= home.rating %>
                                </div>
    
                                <!-- Hover Book Now Button -->
                                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                    <button class="bg-pink-600 hover:bg-pink-700 text-white px-5 py-2 rounded-lg font-semibold shadow-lg transition">
                                        Book Now
                                    </button>
                                </div>
                            </div>
    
                            <!-- Info Section -->
                            <div class="p-4">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-lg font-bold text-gray-900 truncate"><%= home.houseName %></h3>
                                        <p class="text-sm text-gray-500"><%= home.city %></p>
                                    </div>
                                    <span class="text-lg font-semibold text-gray-900">₹<%= home.price %>/night</span>
                                </div>
                                <p class="mt-2 text-sm text-gray-600 line-clamp-2"><%= home.address %></p>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </main>
    </body>
    
<%- include('../partials/footer') %>
</html>
    