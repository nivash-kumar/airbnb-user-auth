<%- include('../partials/head') %>
    </head>

    <body class="bg-gradient-to-br from-gray-50 via-pink-50 to-rose-50 min-h-screen">
        <header class="sticky top-0 z-50 shadow-md">
            <%-include("../partials/nav");%>
        </header>
    
        <main class="container mx-auto px-4 py-10 mt-15">

            <div class="relative z-10">
                <!-- Header Section -->
                <div class="text-center mb-12">
                    <div class="w-20 h-20 bg-gradient-to-br from-pink-500 to-rose-600 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-2xl">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                        </svg>
                    </div>
                    <h2 class="text-4xl font-bold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent mb-4">
                        Welcome to Airbnb – Explore Our Homes
                    </h2>
                    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                        Discover unique places to stay from local hosts in 191+ countries. Feel at home anywhere.
                    </p>
                </div>

                <!-- Search and Filter Section -->
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6 mb-8">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <!-- Search Input -->
                        <div class="md:col-span-2">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Search Homes</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                </div>
                                <input type="text" id="searchInput" placeholder="Search by name, city, or description..."
                                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all duration-200 shadow-sm">
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Max Price</label>
                            <select id="priceFilter" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all duration-200 shadow-sm">
                                <option value="">Any Price</option>
                                <option value="1000">₹1,000</option>
                                <option value="2000">₹2,000</option>
                                <option value="5000">₹5,000</option>
                                <option value="10000">₹10,000+</option>
                            </select>
                        </div>

                        <!-- Rating Filter -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Min Rating</label>
                            <select id="ratingFilter" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all duration-200 shadow-sm">
                                <option value="">Any Rating</option>
                                <option value="4">4+ Stars</option>
                                <option value="4.5">4.5+ Stars</option>
                                <option value="5">5 Stars</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Results Count -->
                <div class="flex justify-between items-center mb-6">
                    <p class="text-gray-600">
                        <span id="resultsCount"><%= registeredHomes.length %></span> homes available
                    </p>
                    <div class="flex items-center space-x-2">
                        <span class="text-sm text-gray-600">Sort by:</span>
                        <select id="sortBy" class="text-sm border border-gray-300 rounded-lg px-3 py-1 focus:outline-none focus:ring-2 focus:ring-pink-500">
                            <option value="default">Recommended</option>
                            <option value="price-low">Price: Low to High</option>
                            <option value="price-high">Price: High to Low</option>
                            <option value="rating">Highest Rated</option>
                        </select>
                    </div>
                </div>

                <!-- Grid Container -->
                <div id="homesGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    <% registeredHomes.forEach(home => { %>
                        <div class="home-card group bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2" 
                             data-name="<%= home.houseName.toLowerCase() %>" 
                             data-city="<%= home.city.toLowerCase() %>" 
                             data-price="<%= home.price %>" 
                             data-rating="<%= home.rating %>">
                            
                            <!-- Clickable Card -->
                            <a href="/homes/<%= home._id %>" class="block">
                                <!-- Image Section -->
                                <div class="relative w-full h-64 overflow-hidden">
                                    <img src="<%= home.photo %>"
                                         alt="<%= home.houseName %>"
                                         class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">

                                    <!-- Floating Rating -->
                                    <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-2 rounded-full shadow-lg">
                                        <span class="flex items-center space-x-1 text-gray-900 font-semibold">
                                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                                            </svg>
                                            <span><%= home.rating %></span>
                                        </span>
                                    </div>

                                    <!-- Price Badge -->
                                    <div class="absolute top-4 right-4 bg-gradient-to-r from-pink-600 to-rose-600 text-white px-3 py-2 rounded-full shadow-lg">
                                        <span class="font-bold">₹<%= home.price %></span>
                                        <span class="text-sm opacity-90">/night</span>
                                    </div>

                                    <!-- Hover Overlay -->
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                        <button class="bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-700 hover:to-rose-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg transition-all duration-200 transform hover:scale-105">
                                            <span class="flex items-center space-x-2">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                </svg>
                                                <span>Details</span>
                                            </span>
                                        </button>
                                    </div>
                                </div>

                                <!-- Info Section -->
                                <div class="p-6">
                                    <div class="flex justify-between items-start mb-3">
                                        <div class="flex-1">
                                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-pink-600 transition-colors duration-200 line-clamp-1">
                                                <%= home.houseName %>
                                            </h3>
                                            <div class="flex items-center space-x-2 text-gray-600 mt-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                </svg>
                                                <span class="font-medium"><%= home.city %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="text-gray-600 text-sm line-clamp-2"><%= home.address %></p>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>

                <!-- No Results Message -->
                <div id="noResults" class="hidden text-center py-12">
                    <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">No homes found</h3>
                    <p class="text-gray-600">Try adjusting your search criteria or filters.</p>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>

        <script>
            // Search and filter functionality
            const searchInput = document.getElementById('searchInput');
            const priceFilter = document.getElementById('priceFilter');
            const ratingFilter = document.getElementById('ratingFilter');
            const sortBy = document.getElementById('sortBy');
            const homesGrid = document.getElementById('homesGrid');
            const noResults = document.getElementById('noResults');
            const resultsCount = document.getElementById('resultsCount');

            function filterHomes() {
                const searchTerm = searchInput.value.toLowerCase();
                const maxPrice = priceFilter.value;
                const minRating = ratingFilter.value;
                const homes = document.querySelectorAll('.home-card');
                let visibleCount = 0;

                homes.forEach(home => {
                    const name = home.dataset.name;
                    const city = home.dataset.city;
                    const price = parseInt(home.dataset.price);
                    const rating = parseFloat(home.dataset.rating);

                    const matchesSearch = name.includes(searchTerm) || city.includes(searchTerm);
                    const matchesPrice = !maxPrice || price <= parseInt(maxPrice);
                    const matchesRating = !minRating || rating >= parseFloat(minRating);

                    if (matchesSearch && matchesPrice && matchesRating) {
                        home.style.display = 'block';
                        visibleCount++;
                    } else {
                        home.style.display = 'none';
                    }
                });

                // Update results count
                resultsCount.textContent = visibleCount;

                // Show/hide no results message
                if (visibleCount === 0) {
                    noResults.classList.remove('hidden');
                } else {
                    noResults.classList.add('hidden');
                }
            }

            function sortHomes() {
                const homes = Array.from(document.querySelectorAll('.home-card'));
                const sortValue = sortBy.value;

                homes.sort((a, b) => {
                    const priceA = parseInt(a.dataset.price);
                    const priceB = parseInt(b.dataset.price);
                    const ratingA = parseFloat(a.dataset.rating);
                    const ratingB = parseFloat(b.dataset.rating);

                    switch (sortValue) {
                        case 'price-low':
                            return priceA - priceB;
                        case 'price-high':
                            return priceB - priceA;
                        case 'rating':
                            return ratingB - ratingA;
                        default:
                            return 0;
                    }
                });

                // Reorder DOM elements
                homes.forEach(home => homesGrid.appendChild(home));
            }

            // Event listeners
            searchInput.addEventListener('input', filterHomes);
            priceFilter.addEventListener('change', filterHomes);
            ratingFilter.addEventListener('change', filterHomes);
            sortBy.addEventListener('change', sortHomes);

            // Initialize
            filterHomes();
        </script>

        <style>
            @keyframes blob {
                0% { transform: translate(0px, 0px) scale(1); }
                33% { transform: translate(30px, -50px) scale(1.1); }
                66% { transform: translate(-20px, 20px) scale(0.9); }
                100% { transform: translate(0px, 0px) scale(1); }
            }
            
            .animate-blob {
                animation: blob 7s infinite;
            }
            
            .animation-delay-2000 {
                animation-delay: 2s;
            }

            .line-clamp-1 {
                display: -webkit-box;
                -webkit-line-clamp: 1;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .line-clamp-2 {
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }
        </style>
    </body>
</html>
    