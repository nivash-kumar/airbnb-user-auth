<%- include('../partials/head') %>

    </head>

    <body class="bg-gray-50 min-h-screen">
        <%- include('../partials/nav') %>

            <main class="container mx-auto px-4 py-10 mt-10">

                <!-- Home Title -->
                <h1 class="text-3xl sm:text-4xl font-bold text-pink-600 mb-6">
                    <%= home.houseName %>
                </h1>

                <!-- Location & Rating -->
                <div class="flex flex-wrap items-center gap-4 mb-6">
                    <span class="text-gray-700 text-lg">üìç <%=  home.city %></span>
                    <span class="bg-yellow-300 text-gray-900 px-3 py-1 rounded-full font-semibold">
                        ‚≠ê <%= home.rating %>
                    </span>
                    <span class="bg-pink-100 text-pink-700 px-3 py-1 rounded-full font-semibold">
                        ‚Çπ<%= home.price %>/night
                    </span>
                </div>

                <!-- Image (Main) -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                    <div class="md:col-span-2">
                        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>"
                            class=" h-[400px] object-cover rounded-lg shadow-lg" />
                    </div>

                    <!-- Optional More Images -->
                    <% if (home.moreImages && home.moreImages.length> 0) { %>
                        <% home.moreImages.forEach(img=> { %>
                            <img src="<%= img %>" alt="Home Image"
                                class="w-full h-48 object-cover rounded-lg shadow-md" />
                            <% }) %>
                                <% } %>
                </div>

                <!-- Details Section -->
                <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
                    <h2 class="text-2xl font-semibold mb-4">üè† Property Details</h2>
                    <p class="text-gray-700 mb-2"><strong>Owner:</strong>
                        <%= home.ownerName %>
                    </p>
                    <p class="text-gray-700 mb-2"><strong>Contact:</strong>
                        <%= home.contactNumber %>
                    </p>
                    <p class="text-gray-700 mb-2"><strong>Full Address:</strong>
                        <%= home.address %>
                    </p>
                    <p class="text-gray-700 mb-2"><strong>Price per night:</strong> ‚Çπ<%= home.price %>
                    </p>
                    <p class="text-gray-700"><strong>Description:</strong>
                        This home is exist in the best home's list in the world.
                        <%= // home.description || "No description provided for this listing." %>
                    </p>
                </div>

                <!-- Book Now Button -->
                <div
                    class="flex justify-around sm:flex-nowrap flex-wrap gap-2 bg-white rounded-full shadow-lg p-4 mb-8 ">

                    <%- include('../partials/favourite') %>

                        <a href="/book/<%= home.id %>"
                            class="w-auto bg-pink-600 hover:bg-pink-700 text-white px-8 py-2 rounded-lg font-semibold shadow-lg transition  hover:scale-110 text-center">
                            Book Now
                        </a>
                </div>

            </main>
    </body>
    
    <%- include('../partials/footer') %>
</html>